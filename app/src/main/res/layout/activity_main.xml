<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:openDrawer="start">

<!--This is the application bar-->
    <android.support.design.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:tools="http://schemas.android.com/tools"
        android:fitsSystemWindows="true"
        tools:context=".MainActivity">

        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme.AppBarOVerlay">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="?attr/colorPrimary"
                app.popupTheme="@style/AppTheme.PopupOverlay" />
        </android.support.design.widget.AppBarLayout>
        <!--This is the Content of the activity-->
        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/dashboard_relative_layout"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <!-- temperature -->
            <LinearLayout
                android:id="@+id/dashboard_temp_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txt_temperature"
                    android:layout_width="160dp"
                    android:layout_height="80dp"
                    android:layout_marginTop="100dp"
                    android:padding="20dp"
                    android:text="--.- \u2103"
                    android:textColor="@color/black"
                    android:textSize="30sp" />
                <!-- Humidity -->
                <TextView
                    android:id="@+id/txt_humidity"
                    android:layout_width="160dp"
                    android:layout_height="80dp"
                    android:layout_marginTop="100dp"
                    android:layout_toRightOf="@+id/txt_temperature"
                    android:padding="20dp"
                    android:text="--.- %"
                    android:textColor="@color/black"
                    android:textSize="30sp" />
            </LinearLayout>

            <!-- Motion detection -->
            <LinearLayout
                android:id="@+id/dashboard_motion_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/dashboard_temp_layout">
                <TextView
                    android:id="@+id/txt_Motion"
                    android:layout_width="160dp"
                    android:layout_height="80dp"
                    android:layout_marginTop="0dp"
                    android:padding="20dp"
                    android:text="No Motion"
                    android:textColor="@color/black"
                    android:textSize="20sp" />
                <TextView
                    android:id="@+id/txt_Motion_icon"
                    android:layout_width="40dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="15dp"
                    android:layout_toRightOf="@+id/txt_Motion"
                    android:text="\u2022"
                    android:textColor="@color/safe_green"
                    android:textSize="60sp" />
            </LinearLayout>

            <!-- smoke detection -->
            <LinearLayout
                android:id="@+id/dashboard_smoke_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/dashboard_motion_layout">
                <TextView
                    android:id="@+id/txt_Smoke"
                    android:layout_width="160dp"
                    android:layout_height="80dp"
                    android:layout_marginTop="0dp"
                    android:layout_below="@+id/txt_Motion"
                    android:padding="20dp"
                    android:text="No Smoke"
                    android:textColor="@color/black"
                    android:textSize="20sp" />
                <TextView
                    android:id="@+id/txt_Smoke_icon"
                    android:layout_width="40dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="15dp"
                    android:layout_below="@+id/txt_Motion_icon"
                    android:layout_toRightOf="@+id/txt_Smoke"
                    android:text="\u2022"
                    android:textColor="@color/safe_green"
                    android:textSize="60sp" />
            </LinearLayout>
        <!-- smoke detection -->
        <LinearLayout
            android:id="@+id/dashboard_gas_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dashboard_smoke_layout">
            <TextView
                android:id="@+id/txt_Gas"
                android:layout_width="160dp"
                android:layout_height="80dp"
                android:layout_marginTop="0dp"
                android:layout_below="@+id/txt_Smoke"
                android:padding="20dp"
                android:text="No Gas"
                android:textColor="@color/black"
                android:textSize="20sp" />
            <TextView
                android:id="@+id/txt_Gas_icon"
                android:layout_width="40dp"
                android:layout_height="60dp"
                android:layout_marginTop="15dp"
                android:layout_below="@+id/txt_Smoke_icon"
                android:layout_toRightOf="@+id/txt_Gas"
                android:text="\u2022"
                android:textColor="@color/safe_green"
                android:textSize="60sp" />
        </LinearLayout>


        </RelativeLayout>
        <!--This is the END of the Content of the activity-->
    </android.support.design.widget.CoordinatorLayout>


    <!--This is the END of the application bar-->

    <android.support.design.widget.NavigationView
        android:id="@+id/NavView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/nav_header_main"
        app:menu="@menu/activity_main_drawer"
        app:itemTextColor="@color/black"
        app:itemIconTint="@color/HamburgerMenuItem"
        android:background="#ffff"/>

</android.support.v4.widget.DrawerLayout>
