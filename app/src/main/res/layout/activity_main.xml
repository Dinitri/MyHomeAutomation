<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:isScrollContainer="true"
    tools:openDrawer="start">

<!--This is the application bar0-->
    <android.support.design.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/dashboard_day"
        xmlns:tools="http://schemas.android.com/tools"
        android:fitsSystemWindows="true"
        tools:context=".MainActivity">

        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme.AppBarOVerlay">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="?attr/colorPrimary"
                app.popupTheme="@style/AppTheme.PopupOverlay" />
        </android.support.design.widget.AppBarLayout>
        <!--This is the Content of the activity-->
        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/dashboard_relative_layout"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="35dp">
            <!--AWAY MODE-->
            <TextView
                android:id="@+id/txt_away_mode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/txt_temperature"
                android:layout_alignStart="@+id/txt_Motion"
                android:layout_marginBottom="14dp"
                android:background="#80000000"
                android:padding="5dp"
                android:gravity="center"
                android:text="AWAY MODE"
                android:textColor="@android:color/background_light"
                android:textSize="20sp" />
            <Switch
                android:id="@+id/away_mode_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/txt_humidity"
                android:layout_alignTop="@+id/txt_away_mode"
                android:padding="10dp"
                android:text="OFF"
                android:textColor="#ffffff"
                android:switchPadding="7dp"
                />
            <!-- temperature -->
            <TextView
                android:id="@+id/txt_temperature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/txt_Motion_icon"
                android:layout_alignStart="@+id/txt_Motion"
                android:layout_marginStart="18dp"
                android:background="@drawable/rounded_text_view"
                android:gravity="center"
                android:text="--.- \u2103"
                android:textColor="@android:color/background_light"
                android:textSize="42sp" />
                <!-- Humidity -->
            <TextView
                android:id="@+id/txt_humidity"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/txt_temperature"
                android:layout_alignBottom="@+id/txt_temperature"
                android:layout_toEndOf="@+id/txt_temperature"
                android:layout_marginLeft="30dp"
                android:background="@drawable/small_circle"
                android:text="--.- %"
                android:textColor="@android:color/background_light"
                android:textSize="21sp" />
            <!-- Motion detection -->
            <TextView
                android:id="@+id/txt_Motion"
                android:layout_width="253dp"
                android:layout_height="wrap_content"
                android:layout_above="@+id/txt_Smoke_icon"
                android:layout_alignStart="@+id/txt_Smoke"
                android:layout_gravity="left|top"
                android:background="#80000000"
                android:padding="10dp"
                android:text="No Motion"
                android:textColor="@android:color/background_light"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/txt_Motion_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/txt_Smoke"
                android:layout_alignStart="@+id/txt_Smoke_icon"
                android:text="\u2022"
                android:textColor="@color/safe_green"
                android:textSize="60sp" />

            <!-- smoke detection -->
            <TextView
                android:id="@+id/txt_Smoke"
                android:layout_width="253dp"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/txt_Smoke_icon"
                android:layout_alignStart="@+id/txt_Gas"
                android:layout_marginBottom="15dp"
                android:background="#80000000"
                android:padding="10dp"
                android:text="No Smoke"
                android:textColor="@android:color/background_light"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/txt_Smoke_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_above="@+id/txt_Gas"
                android:layout_alignStart="@+id/txt_Gas_icon"
                android:text="\u2022"
                android:textColor="@color/safe_green"
                android:textSize="60sp" />

        <!-- CO detection -->
            <TextView
                android:id="@+id/txt_Gas"
                android:layout_width="253dp"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/txt_door_access"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="63dp"
                android:background="#80000000"
                android:padding="10dp"
                android:text="No Carbon Monoxide"
                android:textColor="@android:color/background_light"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/txt_Gas_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/txt_Gas"
                android:layout_alignTop="@+id/txt_Gas"
                android:layout_marginEnd="17dp"
                android:layout_marginTop="-16dp"
                android:text="\u2022"
                android:textColor="@color/safe_green"
                android:textSize="60sp" />
            <!-- Door Access -->
            <TextView
                android:id="@+id/txt_door_access"
                android:layout_width="253dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignStart="@+id/txt_Gas"
                android:layout_marginBottom="35dp"
                android:text="Door Closed"
                android:padding="10dp"
                android:background="#80000000"
                android:textColor="@android:color/background_light"
                android:textSize="20sp"
                />

            <TextView
                android:id="@+id/txt_DoorAcces_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignStart="@+id/txt_Gas_icon"
                android:layout_marginBottom="16dp"
                android:text="\u2022"
                android:textColor="@color/safe_green"
                android:textSize="60sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_door_access"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Preferred Shortcut"
                    android:textAlignment="viewStart"
                    android:textColor="@color/black"/>
            </LinearLayout>

        </RelativeLayout>
        <!--This is the END of the Content of the activity-->
    </android.support.design.widget.CoordinatorLayout>


    <!--This is the END of the application bar-->

    <android.support.design.widget.NavigationView
        android:id="@+id/NavView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/nav_header_main"
        app:menu="@menu/activity_main_drawer"
        app:itemTextColor="@color/black"
        app:itemIconTint="@color/HamburgerMenuItem"
        android:background="#ffff"/>

</android.support.v4.widget.DrawerLayout>
